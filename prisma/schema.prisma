generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  name   String
  email  String
  emails emails[]

  phone String?

  @@unique([email, phone])
}

model emails {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  sender       String
  recipient_id Int
  recipient    users     @relation(fields: [recipient_id], references: [id])
  contents     String
  subject      String
  read_at      DateTime?
  deleted_at   DateTime?
}
